@prefix ogit.OnlineService: <http://www.purl.org/ogit/OnlineService/> .
@prefix ogit:                 <http://www.purl.org/ogit/> .
@prefix dcterms:              <http://purl.org/dc/terms/> .
@prefix rdfs:                 <http://www.w3.org/2000/01/rdf-schema#> .

ogit.OnlineService:Annotation
	a rdfs:Class;
	rdfs:subClassOf ogit:Entity;
	rdfs:label "Annotation";
	dcterms:description "Represents an annotation on a OnlineService.";
	dcterms:valid "start=2024-12-12;";
	dcterms:creator "Erik Wilfling";
	ogit:scope "NTO";
	ogit:parent ogit:Node;
	ogit:mandatory-attributes (
		ogit:id

	);
	ogit:optional-attributes (
		ogit:createdAt	# the date when the annotation was created
		ogit:content	# the original content created by teh FrontEnd
		ogit:title		# the title of the Anotation
		ogit:comment	# the comment of the Anotation
		ogit:status 	# Status of the annotation (Created, Sent, Commented, ReviewRequested, ReviewCompleted, Closed)
	);
	ogit:indexed-attributes (

	);
	ogit:allowed (
		[ ogit:belongs   ogit:Person ] #The person that created the anotation
		[ ogit:belongs   ogit:ServiceManagement.ChangeRequest ]
		[ ogit:belongs 	 ogit:OnlineService.OnlineService]
		[ ogit:assignedTo ogit:Person]
		[ ogit:reviewedBy ogit:Person]
		[ ogit:approvedBy ogit:Person] 
	);
.