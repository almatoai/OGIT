@prefix ogit:             <http://www.purl.org/ogit/> .
@prefix owl:              <http://www.w3.org/2002/07/owl#> .
@prefix rdfs:             <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms:          <http://purl.org/dc/terms/> .
@prefix ogit.Security:    <http://www.purl.org/ogit/Security/> .
@prefix ogit.Asset:       <http://www.purl.org/ogit/Asset/> .

ogit.Security:CPE
	a rdfs:Class ;
	rdfs:subClassOf ogit:Entity ;
	rdfs:label "Common Platform Enumeration (CPE)" ;
	dcterms:description "A standardized identifier defined by the National Institute of Standards and Technology (NIST) to describe software, hardware, and operating system platforms (e.g., cpe:2.3:a:vendor:product:version:*:*:*:*:*:*:*). Used to correlate assets or products with known vulnerabilities (CVEs) in the NVD." ;
	dcterms:valid "start=2025-10-27;" ;
	dcterms:creator "" ;
	ogit:scope "NTO" ;
	ogit:parent ogit:Node ;
	ogit:mandatory-attributes (
		ogit:id # The canonical CPE string (e.g., cpe:2.3:a:vendor:product:version:...)
		ogit:name
	) ;
	ogit:optional-attributes (
		ogit:version
        ogit:vendor
		ogit:language
		ogit:osName
		ogit:source           # e.g., NVD, internal repository
	) ;
	ogit:indexed-attributes (
		ogit:id
		ogit:version
	) ;
	ogit:allowed (
		[ ogit:describes ogit:Product ]          # A CPE identifies a product
		[ ogit:references ogit.Security:Vulnerability ] # CPE may be linked to vulnerabilities
	) ;
.